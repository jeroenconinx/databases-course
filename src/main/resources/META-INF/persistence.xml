<?xml version="1.0" encoding="UTF-8" ?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="be.kuleuven.dbproject">
        <description>Musea JPA configuratie</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>be.kuleuven.dbproject.model.Bezoek</class>
        <class>be.kuleuven.dbproject.model.Bezoeker</class>
        <class>be.kuleuven.dbproject.model.Bijdrage</class>
        <class>be.kuleuven.dbproject.model.Boek</class>
        <class>be.kuleuven.dbproject.model.Game</class>
        <class>be.kuleuven.dbproject.model.Medewerker</class>
        <class>be.kuleuven.dbproject.model.Museum</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:musea.db"/>
            <property name="javax.persistence.jdbc.user" value=""/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.schema-generation.database.action" value="update"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLiteDialect" />
            <property name="hibernate.connection.autocommit" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.flushMode" value="ALWAYS" />

            <property name="hibernate.cache.use_second_level_cache" value="false" />
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
        </properties>
    </persistence-unit>
</persistence>